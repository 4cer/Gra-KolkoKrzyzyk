        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KolkoKrzyzyk"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="388" ResizeMode="NoResize">
    <Grid x:Name="theDataGrid" HorizontalAlignment="Center" Margin="0,0,0,15">
